        <ListBox ItemsSource="{Binding ItemCount}" BorderThickness="0" Background="Transparent">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Rectangle 
                            Fill="{Binding Path=DataContext.State, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Converter={StaticResource StateToColorConverter}}" 
                            Height="30" Width="10" 
                            Margin="-2,0,0,0"
                            />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Rectangle DockPanel.Dock="Right" Margin="-2,0,0,0"  Fill="{Binding State, Converter={StaticResource StateToColorConverter}}" Height="30" HorizontalAlignment="Stretch" Visibility="{Binding Completed, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <TextBox VerticalContentAlignment="Center" IsReadOnly="true" Background="Transparent" BorderThickness="0"  Margin="0,0,10,0"  Grid.Column="0" Text="{Binding Header}" Foreground="Black" />
    </Grid>
